# Database
DATABASE_URL=postgresql://deltran:deltran123@postgres:5432/deltran
POSTGRES_DB=deltran
POSTGRES_USER=deltran
POSTGRES_PASSWORD=deltran123

# Redis
REDIS_URL=redis://redis:6379

# NATS
NATS_URL=nats://nats:4222

# Observability
JAEGER_ENDPOINT=http://jaeger:14268/api/traces
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_URL=http://grafana:3000

# Security
JWT_SECRET=your-jwt-secret-change-in-production
MTLS_CA_CERT_PATH=/app/certs/ca.crt
MTLS_CERT_PATH=/app/certs/server.crt
MTLS_KEY_PATH=/app/certs/server.key

# API Settings
API_VERSION=v1
LOG_LEVEL=INFO

# Risk Engine
RISK_MODE=Medium
RISK_LOW_SPREAD_THRESHOLD=0.001
RISK_MEDIUM_SPREAD_THRESHOLD=0.005
RISK_HIGH_SPREAD_THRESHOLD=0.01

# Liquidity
LIQUIDITY_QUOTE_TTL=30
LIQUIDITY_SLA_MS=150

# Settlement
SETTLEMENT_BATCH_SIZE=1000
SETTLEMENT_INTRADAY_WINDOW=4h
SETTLEMENT_EOD_WINDOW=24h

# Compliance
TRAVEL_RULE_THRESHOLD=1000
SANCTIONS_CHECK_ENABLED=true
PEP_CHECK_ENABLED=true