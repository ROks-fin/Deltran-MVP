# DelTran Infrastructure Configuration
# Copy this file to .env and update with your values

# ============================================
# PostgreSQL Configuration
# ============================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=deltran
POSTGRES_USER=deltran_app
POSTGRES_PASSWORD=changeme123

# Replication
REPLICATION_USER=replicator
REPLICATION_PASSWORD=replica456

# PgAdmin
PGADMIN_EMAIL=admin@deltran.local
PGADMIN_PASSWORD=admin123

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123

# Sentinel
REDIS_SENTINEL_PORT_1=26379
REDIS_SENTINEL_PORT_2=26380
REDIS_SENTINEL_PORT_3=26381

# ============================================
# RocksDB Configuration
# ============================================
ROCKSDB_DATA_DIR=./data/ledger
ROCKSDB_WRITE_BUFFER_SIZE_MB=64
ROCKSDB_MAX_WRITE_BUFFER_NUMBER=4
ROCKSDB_MAX_BACKGROUND_JOBS=8

# ============================================
# Application Configuration
# ============================================
APP_ENV=development
APP_PORT=8080
LOG_LEVEL=info

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-me-in-production
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=7d

# Session
SESSION_SECRET=your-session-secret-change-me-in-production

# ============================================
# External Services (Placeholder)
# ============================================

# SWIFT Integration
SWIFT_ENDPOINT=https://swift.example.com
SWIFT_API_KEY=your-swift-api-key
SWIFT_CERT_PATH=./certs/swift-client.pem
SWIFT_KEY_PATH=./certs/swift-client-key.pem

# Central Bank RTGS
RTGS_ENDPOINT=https://rtgs.centralbank.example.com
RTGS_PARTICIPANT_ID=DELTRAN001
RTGS_CERT_PATH=./certs/rtgs-client.pem
RTGS_KEY_PATH=./certs/rtgs-client-key.pem

# FX Rates (Bloomberg/Reuters)
FX_PROVIDER=mock
FX_API_KEY=your-fx-api-key
FX_ENDPOINT=https://fx-rates.example.com

# KYC/AML (WorldCheck/Dow Jones)
KYC_PROVIDER=mock
KYC_API_KEY=your-kyc-api-key
KYC_ENDPOINT=https://kyc.example.com

# ============================================
# Monitoring & Observability
# ============================================

# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Jaeger
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831
JAEGER_COLLECTOR_ENDPOINT=http://localhost:14268/api/traces

# ============================================
# Security
# ============================================

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20

# 2FA
TOTP_ISSUER=DelTran
TOTP_PERIOD=30

# ============================================
# Backup & DR
# ============================================
BACKUP_DIR=./data/backups
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# ============================================
# Feature Flags
# ============================================
ENABLE_2FA=true
ENABLE_RATE_LIMITING=true
ENABLE_AUDIT_LOG=true
ENABLE_METRICS=true
ENABLE_TRACING=false

# ============================================
# Network
# ============================================
DB_NETWORK_SUBNET=172.20.0.0/16
CACHE_NETWORK_SUBNET=172.21.0.0/16
APP_NETWORK_SUBNET=172.22.0.0/16
